@using MicroJobs.Web.ViewModels.Job
@using System.Linq;
@model CreateJobInputModel
@{ this.ViewData["Title"] = "Добави работа";
        var subCategoriesItems = this.Model.SubCategoryItems.Select(x => new SelectListItem(x.Value, x.Key)); }
                

<h1>@this.ViewData["Title"]</h1>

<form method="post" class="col-md-6 align-content-center">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobMainCategory "></label>
        <select asp-for="JobMainCategory" class="form-control" asp-items="@Html.GetEnumSelectList
                <MicroJobs.Data.Models.Enums.JobMainCategory>()">
        </select>
        <span asp-validation-for="JobMainCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobSubCategoryId "></label>
        <select asp-for="JobSubCategoryId" class="form-control" asp-items="subCategoriesItems">
        </select>
        <span asp-validation-for="JobSubCategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Town "></label>
        <select asp-for="Town" class="form-control" asp-items="@Html.GetEnumSelectList
                <MicroJobs.Data.Models.Enums.Town>()">
        </select>
        <span asp-validation-for="Town" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea rows="6" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">

        <label asp-for="Reward"></label>
        <input asp-for="Reward" class="form-control" />
        <span asp-validation-for="Reward" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobImageUrl"></label>
        <input asp-for="JobImageUrl" class="form-control" />
        <span asp-validation-for="JobImageUrl" class="text-danger"></span>
    </div>

    <input type="submit" class="btn-success" />
</form>

