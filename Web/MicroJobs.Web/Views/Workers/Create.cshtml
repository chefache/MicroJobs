@using MicroJobs.Web.ViewModels.Worker
@using System.Linq
@model CreateWorkerInputModel

@{ this.ViewData["Title"] = "Стани работник";}

<h1>@this.ViewData["Title"]</h1>

<form method="post" class="col-md-7 offset-md-3" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Town "></label>
        <select asp-for="Town" class="form-control" asp-items="@Html.GetEnumSelectList
                <MicroJobs.Data.Models.Enums.Town>()">
        </select>
        <span asp-validation-for="Town" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AboutMe"></label>
        <textarea rows="6" asp-for="AboutMe" class="form-control"></textarea>
        <span asp-validation-for="AboutMe" class="text-danger"></span>
    </div>

    <div id="SkillsContainer">
        <label asp-for="Skills"></label>
        <a class="btn btn-success" onclick="AddMoreSkills()">+</a>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>

@section Scripts{
    <script>
        // Skills[0].SkillName
        var skillIndex = 0;
        function AddMoreSkills() {
            $("#SkillsContainer").
                append("<div class='form-control'>Умение: <input type='text' name='Skills[" + skillIndex + "].SkillName' /> Описание: <input type='text' name='Skills[" + skillIndex + "].Description' /></div>")
            skillIndex++;
        }
    </script>
}